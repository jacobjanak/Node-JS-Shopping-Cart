{{#each products}}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img class="img-responsive" src="{{this.imagePath}}" alt="Product">
      <div class="caption">
        <h4>{{this.title}}</h4>
        <p>
          <a href="/add-to-cart/{{this._id}}" class="btn btn-primary" role="button">${{this.price}}.00</a>
        </p>
      </div>
    </div>
  </div>
{{/each}}
